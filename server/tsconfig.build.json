{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "noEmit": false,
    "types": ["node", "pg", "cors"]
  },
  "exclude": [
    "vitest.config.ts",
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/__test__/**"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "preferTsExts": true,
    "compilerOptions": {
      "module": "ESNext"
    }
  }
}